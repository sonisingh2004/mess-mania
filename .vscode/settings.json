{
  "editor.tabSize": 2,
  "editor.detectIndentation": false,
  "files.exclude": {
    "**/.git": true,
    "**/node_modules": true,
    "**/dist": true,
    "**/.DS_Store": true
  },
  // search exlude
  "search.exclude": {
    "package-lock.json": true,
    "**/.git": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/dist": true,
    "**/build": true
  },
  "editor.defaultFormatter": "biomejs.biome",
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "editor.formatOnPaste": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports.biome": "explicit",
    "source.addMissingImports": "explicit",
    "source.organizeImports": "explicit"
  },
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "[json][jsonc][yaml][postcss][css][scss]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "biomejs.biome"
  },
  "cSpell.words": [
    "aircrafts",
    "autosize",
    "biomejs",
    "Bleu",
    "Cashapp",
    "clsx",
    "commitlint",
    "cssnano",
    "datetime",
    "Embla",
    "Encashement",
    "Encashment",
    "encashments",
    "flexbugs",
    "Fileinput",
    "fullhuman",
    "HRMS",
    "jobinformation",
    "lefthook",
    "lerp",
    "mantine",
    "Mobiledata",
    "nexg",
    "nexgtech",
    "nuqs",
    "Offboard",
    "offboarded",
    "officedocument",
    "onboarded",
    "openxmlformats",
    "pangea",
    "postbuild",
    "Profiledetails",
    "purgecss",
    "recaptcha",
    "recruitments",
    "signin",
    "Signup",
    "simplyjet",
    "spreadsheetml",
    "tabler",
    "tanstack",
    "timesheet"
  ],
  "cssVariables.lookupFiles": [
    "**/*.css",
    "**/*.scss",
    "**/*.sass",
    "**/*.less",
    "node_modules/@mantine/core/styles.css"
  ],
  "css.validate": true,
  "[typescriptreact][typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[postcss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "editor.fontSize": 12
}